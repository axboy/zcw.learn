<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lia_photo"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/back_to_main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="《返回"
                android:textColor="#18b4ed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="姓名"
                android:textColor="#18b4ed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/right1"
                android:layout_centerHorizontal="true"
                android:text="性别"
                android:textColor="#18b4ed"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="修改密码"
                android:textColor="#18b4ed"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/call_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="联系方式"
            android:textColor="#888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/left1"
            android:text="手机"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/right3"
            android:layout_below="@id/right3"
            android:layout_marginBottom="12dp"
            android:text="邮箱"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text=">"
            android:textColor="#888"
            android:textSize="36sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888" />

    <RelativeLayout
        android:id="@+id/per_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="借阅权限"
            android:textColor="#888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/left2"
            android:text="借阅"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/right6"
            android:layout_below="@id/right6"
            android:layout_marginBottom="12dp"
            android:text="权限"
            android:textColor="#000"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text=">"
            android:textColor="#888"
            android:textSize="36sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888" />

    <RelativeLayout
        android:id="@+id/borrow_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="借阅信息"
            android:textColor="#888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/left3"
            android:text="违章"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/right8"
            android:layout_below="@id/right8"
            android:layout_marginBottom="12dp"
            android:text="欠费"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888" />

    <RelativeLayout
        android:id="@+id/time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="时间信息"
            android:textColor="#888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/left4"
            android:text="开始"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/right10"
            android:layout_below="@id/right10"
            android:layout_marginBottom="12dp"
            android:text="结束"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888" />

    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/password_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/left5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/editbox_shape"
            android:layout_marginBottom="5dp"
            android:hint="在此输入新密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/right12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/left5"
            android:layout_weight="1"
            android:background="@drawable/editbox_shape"
            android:hint="在此确认新密码"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>