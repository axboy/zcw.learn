<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#18b4ed"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_borrow_anthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="学通Java Web的24堂课:110集大型多媒体教学视频 / 陈丹丹, 卢瀚等编著"
            android:textSize="22sp" 
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/current_borrow_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条码号:1789794"
            android:textSize="22sp" 
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_borrow_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="借阅日期：2014-12-10 "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/current_borrow_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瑶湖理工类书库 "
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_borrow_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="应还日期：2015-01-23 "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/current_borrow_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="续借次数：1"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>