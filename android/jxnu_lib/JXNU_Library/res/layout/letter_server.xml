<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="短信服务"
            android:textColor="#18b4ed"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/letter_server_back_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="《返回"
            android:textColor="#18b4ed"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="预约到书提醒"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb1"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束到期提醒"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb2"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="超期催还提醒"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb3"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="借书成功提醒"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb4"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="还书成功提醒"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb5"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="超期罚款通知"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb6"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违章罚款通知"
                android:textSize="23sp" />

            <cn.edu.jxnu.x3104.team3.jxnu_library.SlipButton
                android:id="@+id/sb7"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <EditText
            android:id="@+id/letter_server_telenum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/editbox_shape"
            android:drawableLeft="@drawable/img_blank"
            android:hint="(请输入您的手机号码)"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/letter_server_enter"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/editbox_shape"
                android:gravity="center"
                android:hint="确定"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/letter_server_cancel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/editbox_shape"
                android:gravity="center"
                android:hint="退订"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>