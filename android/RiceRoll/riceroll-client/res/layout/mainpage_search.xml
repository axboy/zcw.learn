<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶栏 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#18b4ed"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_search_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/riceroll_white" />

        <EditText
            android:gravity="center_vertical"
            android:id="@+id/main_search_et"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/search_line"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#ffffff" />
    </LinearLayout>

    <!-- 游标栏 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cookbook_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="搜菜谱"
            android:textColor="@drawable/tv_selected_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fm_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="搜食材"
            android:textColor="@drawable/tv_selected_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/condiment_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="搜调料"
            android:textColor="@drawable/tv_selected_color_selector"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_search_cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/cursor" />

    <ListView
        android:id="@+id/main_search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />

</LinearLayout>