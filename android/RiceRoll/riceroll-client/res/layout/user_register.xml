<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <EditText android:id="@+id/userNickNameToRegister"
        android:hint="昵称"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/userTelToRegister"
        android:hint="手机号"
        android:layout_width="fill_parent"
        android:phoneNumber="true"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/userAddressToRegister"
        android:hint="地址"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/userPwd1ToRegister"
        android:hint="密码"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/userPwd2ToRegister"
        android:hint="密码确认"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="userRegisterOK"
            android:text="确认" />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="userRegisterCancel"
            android:text="取消" />

</LinearLayout>